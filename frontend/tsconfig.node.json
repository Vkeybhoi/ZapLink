{
  "compilerOptions": {
    "composite": true, // Required for project references
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "./dist", // Ensure output directory is specified
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}